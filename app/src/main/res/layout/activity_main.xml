<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/mainHeader"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LocalNet Mesh"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#075E54"/>

        <View
            android:id="@+id/statusIndicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="#FF0000"
            android:layout_marginEnd="15dp"/> <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@android:drawable/ic_menu_manage"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Settings"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/tabChatLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <ScrollView
                android:id="@+id/messageScrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="#E5DDD5">
                <TextView
                    android:id="@+id/receivedMessages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-- Global Chat --"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:background="#FFFFFF">
                <EditText
                    android:id="@+id/inputMessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Broadcast Message..."/>
                <Button
                    android:id="@+id/btnSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabPeopleLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#FFFFFF"
            android:padding="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click to Chat Privately:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"/>
            <ListView
                android:id="@+id/peersListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPrivateChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#E5DDD5"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#075E54"
                android:padding="15dp"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/btnBackFromPrivate"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="â†"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#00000000"
                    android:padding="0dp"/>
                <TextView
                    android:id="@+id/txtPrivateChatName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat Name"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <ScrollView
                android:id="@+id/privateScrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="10dp">
                <TextView
                    android:id="@+id/txtPrivateMessages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16sp"/>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:background="#FFFFFF">
                <Button
                    android:id="@+id/btnPrivatePhoto"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:backgroundTint="#FF9800"/>
                <EditText
                    android:id="@+id/inputPrivateMessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Type private message..."/>
                <Button
                    android:id="@+id/btnPrivateSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#EEEEEE"
        android:elevation="8dp">
        <Button
            android:id="@+id/navChat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="GLOBAL"
            android:textColor="#075E54"/>
        <Button
            android:id="@+id/navPeople"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="PEOPLE"
            android:textColor="#666666"/>
    </LinearLayout>

</LinearLayout>