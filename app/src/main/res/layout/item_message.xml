<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp"
    android:paddingHorizontal="8dp">

    <LinearLayout
        android:id="@+id/layoutReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_message_received"
        android:orientation="vertical"
        android:maxWidth="280dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/txtReceivedSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sender Name"
            android:textStyle="bold"
            android:textColor="#E91E63"
            android:textSize="12sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/txtReceivedBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message text goes here"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/txtReceivedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="10:30 pm"
            android:textColor="#999999"
            android:textSize="10sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_message_sent"
        android:orientation="vertical"
        android:maxWidth="280dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtSentBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message text"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtSentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="10:31 pm"
            android:textColor="#555555"
            android:textSize="10sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

</RelativeLayout>