<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp"
    android:paddingHorizontal="8dp">

    <LinearLayout
        android:id="@+id/layoutReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_message_received"
        android:orientation="vertical"
        android:padding="8dp"
        android:maxWidth="280dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/txtReceivedBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a received message."
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtReceivedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="10:30 pm"
            android:textColor="#666666"
            android:textSize="12sp"
            android:paddingTop="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_message_sent"
        android:orientation="vertical"
        android:padding="8dp"
        android:maxWidth="280dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/txtSentBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a sent message."
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtSentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="10:31 pm"
            android:textColor="#E0E0E0"
            android:textSize="12sp"
            android:paddingTop="4dp"/>
    </LinearLayout>

</RelativeLayout>